// salary calculater

float basic , da , ma , hra , pt , total;
	printf("enter basic salary : ");
	scanf("%f", & basic);
	printf("enter da(in percentage) : ");
	scanf("%f", & da);
	da = (basic*da)/100;
	ma = (basic*5)/100;
	hra = (basic*3)/100;
	pt = (basic*5)/1000;
	total = basic + da + ma + hra + pt;
	printf("total salary : %f", total);
